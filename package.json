  "version": "1.0.0",
  "description": "Capture App API",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start:local-dev-services": "docker compose -f docker-compose.dev.yml up -d --wait",
    "stop:local-dev-services": "docker compose -f docker-compose.dev.yml down",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "npm run eslint:test",
    "test:api": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --runInBand --coverage",
    "eslint:test": "eslint .",
    "eslint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlutterLesego/capture-app-backend.git"
  },
